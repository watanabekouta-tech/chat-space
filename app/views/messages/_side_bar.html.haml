.side-bar
  
  .side-bar__header
    .side-bar__namebox
      .side-bar__name__list
        =current_user.name
      .side-bar__icon
        .side-bar__icon1
        =link_to new_group_path do
          = icon('fas', 'edit')
        .side-bar__icon2
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groupsbox
        = link_to '#' do
          .side-bar__groupsname
            = group.name
          .side-bar__groupsmessage
            まだメッセージがありません
